/* components/search/search.wxss */
.container{ position:relative; left:0; top:0; width:100%; height:70rpx; z-index: 9999; overflow: hidden;}
.containerFocus{ position: fixed; left:0; top:0; width:100%; height:100%; z-index: 9999; background:#ccc;}

.search{
  display: flex;align-items: center;margin: 10rpx 20rpx;
}
.search-text{
  padding: 5rpx; display: flex;flex:1 ;border: 1rpx #888 solid; border-radius: 30rpx;background-color: white;align-items: center;
}
.search-input{
  flex:1;
}
.search-cancel{
  margin: 0 10rpx;
}
.icon-sousuo{
  margin-left:10rpx ;
}

.search-history{
  display: flex;justify-content: space-between;margin: 20rpx;
}
.search-history-btn{
  display: flex;margin: 0 20rpx;width: 90%;flex-wrap: wrap;
}
.btn-item{
  margin: 10rpx 20rpx;background-color: white;border-radius: 20rpx;
  padding: 0 10rpx;flex-shrink: 0;
}

.search-list-item{
  display: flex;height: 70rpx;border-bottom: 1rpx #666 dashed;padding: 10rpx;
  align-items:center;justify-content: space-between;margin:20rpx 20rpx;
}
.item-content{
  display: flex;
}
.item-userPhoto{
  height: 70rpx;width: 70rpx;background-color: blue;margin-right: 20rpx;
}
