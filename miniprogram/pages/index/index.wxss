.index-swiper{
  margin:20rpx 20rpx 20rpx 20rpx;border-radius:10rpx;overflow:hidden;height: 300rpx;
}
.swiper-img{
  width:100%;
}

.index-tab{ display: flex;}
.index-tab view{ flex:1; text-align: center; padding:10rpx; margin:10rpx;}
.index-tab view.active{ border-bottom: 1px red solid; color:red;}

.index-list{
  display: flex;flex-wrap: wrap;justify-content: space-evenly;
}
.list-item{
  width: 45%;
}
.list-item image{
  width: 100%;height: 200rpx;border-radius: 20rpx;overflow: hidden;
}
.item-font{
  display: flex;flex-wrap: wrap;justify-content: space-between;
}
.item-left{
  color: red;font-size: 30rpx;
}
.item-right{
  color: red;font-size: 30rpx;
}